{
  "$schema": "https://schema.management.azure.com/schemas/2019-12-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "defaultValue": "scientific-api-with-db",
      "metadata": {
        "description": "Name for the container group"
      }
    },
    "containerName": {
      "type": "string",
      "defaultValue": "scientific-api-db-container",
      "metadata": {
        "description": "Name for the container"
      }
    },
    "image": {
      "type": "string",
      "defaultValue": "scientific-api:db-latest",
      "metadata": {
        "description": "Container image to deploy"
      }
    },
    "port": {
      "type": "int",
      "defaultValue": 8000,
      "metadata": {
        "description": "Port to open on the container"
      }
    },
    "cpuCores": {
      "type": "string",
      "defaultValue": "2.0",
      "metadata": {
        "description": "The number of CPU cores to allocate to the container"
      }
    },
    "memoryInGb": {
      "type": "string",
      "defaultValue": "4.0",
      "metadata": {
        "description": "The amount of memory to allocate to the container in gigabytes"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-09-01",
      "name": "[parameters('containerGroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "containers": [
          {
            "name": "[parameters('containerName')]",
            "properties": {
              "image": "[parameters('image')]",
              "ports": [
                {
                  "port": "[parameters('port')]",
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "PORT",
                  "value": "[string(parameters('port'))]"
                },
                {
                  "name": "DB_TYPE",
                  "value": "sqlite"
                },
                {
                  "name": "DATABASE_URL",
                  "value": "sqlite:///scientific_api.db"
                },
                {
                  "name": "PYTHONPATH",
                  "value": "/app"
                },
                {
                  "name": "HEAVY_PIPELINE_ON_START",
                  "value": "true"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "[parameters('cpuCores')]",
                  "memoryInGB": "[parameters('memoryInGb')]"
                }
              },
              "volumeMounts": [
                {
                  "name": "database-volume",
                  "mountPath": "/app/data"
                }
              ]
            }
          }
        ],
        "volumes": [
          {
            "name": "database-volume",
            "emptyDir": {}
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "port": "[parameters('port')]",
              "protocol": "TCP"
            }
          ],
          "dnsNameLabel": "[concat(parameters('containerGroupName'), '-', uniqueString(resourceGroup().id))]"
        },
        "restartPolicy": "Always"
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
    },
    "containerFQDN": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.fqdn]"
    }
  }
} 