{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subscriptionId": {
      "type": "String",
      "defaultValue": "8e746503-c0c0-4535-a05d-49e544196e3f"
    },
    "resourceGroupName": {
      "type": "String",
      "defaultValue": "scientific-api"
    },
    "name": {
      "type": "String",
      "defaultValue": "scientific-api"
    },
    "location": {
      "type": "String",
      "defaultValue": "Canada Central"
    },
    "hostingPlanName": {
      "type": "String",
      "defaultValue": "ASP-scientificapi-aef1"
    },
    "serverFarmResourceGroup": {
      "type": "String",
      "defaultValue": "scientific-api"
    },
    "alwaysOn": {
      "type": "Bool",
      "defaultValue": false
    },
    "ftpsState": {
      "type": "String",
      "defaultValue": "FtpsOnly"
    },
    "sku": {
      "type": "String",
      "defaultValue": "Basic"
    },
    "skuCode": {
      "type": "String",
      "defaultValue": "B1"
    },
    "workerSize": {
      "type": "String",
      "defaultValue": "0"
    },
    "workerSizeId": {
      "type": "String",
      "defaultValue": "0"
    },
    "numberOfWorkers": {
      "type": "String",
      "defaultValue": "1"
    },
    "linuxFxVersion": {
      "type": "String",
      "defaultValue": "DOCKER|index.docker.io/gretk/scientific-api-app-image:scientific-api"
    },
    "dockerRegistryUrl": {
      "type": "String",
      "defaultValue": "https://index.docker.io"
    },
    "dockerRegistryUsername": {
      "type": "String",
      "defaultValue": ""
    },
    "dockerRegistryPassword": {
      "type": "SecureString",
      "defaultValue": ""
    },
    "dockerRegistryStartupCommand": {
      "type": "String",
      "defaultValue": ""
    },
    "cosmosDatabaseAccountName": {
      "type": "String",
      "defaultValue": "scientific-api-server"
    },
    "cosmosDatabaseName": {
      "type": "String",
      "defaultValue": "scientific-data"
    },
    "vnetName": {
      "type": "String",
      "defaultValue": "vnet-euoxdfir"
    },
    "outboundSubnetName": {
      "type": "String",
      "defaultValue": "subnet-nwivqmzl"
    },
    "outboundSubnetAddressPrefix": {
      "type": "String",
      "defaultValue": "10.0.2.0/24"
    },
    "serviceConnectorName": {
      "type": "String",
      "defaultValue": "connector_pccj3m5biubqo"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[parameters('hostingPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('skuCode')]",
        "tier": "[parameters('sku')]",
        "size": "[parameters('skuCode')]",
        "family": "B",
        "capacity": "[int(parameters('numberOfWorkers'))]"
      },
      "kind": "linux",
      "properties": {
        "perSiteScaling": false,
        "elasticScaleEnabled": false,
        "maximumElasticWorkerCount": 1,
        "isSpot": false,
        "reserved": true,
        "isXenon": false,
        "hyperV": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": "[int(parameters('workerSizeId'))]",
        "zoneRedundant": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
      ],
      "kind": "app,linux,container",
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(parameters('name'), '.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Standard"
          },
          {
            "name": "[concat(parameters('name'), '.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "reserved": true,
        "isXenon": false,
        "hyperV": false,
        "siteConfig": {
          "numberOfWorkers": "[int(parameters('numberOfWorkers'))]",
          "linuxFxVersion": "[parameters('linuxFxVersion')]",
          "acrUseManagedIdentityCreds": false,
          "alwaysOn": "[parameters('alwaysOn')]",
          "http20Enabled": false,
          "functionAppScaleLimit": 0,
          "minimumElasticInstanceCount": 0,
          "appSettings": [
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[parameters('dockerRegistryUrl')]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_USERNAME",
              "value": "[parameters('dockerRegistryUsername')]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
              "value": "[parameters('dockerRegistryPassword')]"
            },
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            },
            {
              "name": "COSMOS_DB_DATABASE",
              "value": "[parameters('cosmosDatabaseName')]"
            },
            {
              "name": "COSMOS_DB_ACCOUNT",
              "value": "[parameters('cosmosDatabaseAccountName')]"
            }
          ]
        },
        "scmSiteAlsoStopped": false,
        "clientAffinityEnabled": false,
        "clientCertEnabled": false,
        "clientCertMode": "Required",
        "hostNamesDisabled": false,
        "containerSize": 0,
        "dailyMemoryTimeQuota": 0,
        "httpsOnly": true,
        "redundancyMode": "None",
        "storageAccountRequired": false,
        "keyVaultReferenceIdentity": "SystemAssigned"
      }
    },
    {
      "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
      "apiVersion": "2021-02-01",
      "name": "[concat(parameters('name'), '/scm')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('name'))]"
      ],
      "properties": {
        "allow": true
      }
    },
    {
      "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
      "apiVersion": "2021-02-01",
      "name": "[concat(parameters('name'), '/ftp')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('name'))]"
      ],
      "properties": {
        "allow": true
      }
    }
  ],
  "outputs": {
    "webAppUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('name'), '.azurewebsites.net')]"
    },
    "webAppName": {
      "type": "string",
      "value": "[parameters('name')]"
    }
  }
} 