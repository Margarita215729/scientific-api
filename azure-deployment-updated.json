{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_scientific_api_full_name": {
            "defaultValue": "scientific-api-full",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2024-10-01-preview",
            "name": "[parameters('containerGroups_scientific_api_full_name')]",
            "location": "eastus",
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('containerGroups_scientific_api_full_name')]",
                        "properties": {
                            "image": "[concat('scientificapiacr.azurecr.io/', parameters('containerGroups_scientific_api_full_name'), ':latest')]",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 8000
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "ADSABS_TOKEN",
                                    "value": "pDbJnrgwpsZYj14Vbkn1LmMCjdiIxXrgUcrdLvjk"
                                },
                                {
                                    "name": "SERPAPI_KEY",
                                    "value": "12ad8fb8fbcd01088827b7d3143de6d9fa15c571dc11ac0daf7f24b25097fac8"
                                },
                                {
                                    "name": "ENVIRONMENT",
                                    "value": "production"
                                },
                                {
                                    "name": "PYTHONPATH",
                                    "value": "/app"
                                },
                                {
                                    "name": "PYTHONUNBUFFERED",
                                    "value": "1"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 8.0,
                                    "cpu": 4.0
                                }
                            }
                        }
                    }
                ],
                "initContainers": [],
                "imageRegistryCredentials": [
                    {
                        "server": "scientificapiacr.azurecr.io",
                        "username": "scientificapiacr"
                    }
                ],
                "restartPolicy": "Always",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 8000
                        }
                    ],
                    "type": "Public",
                    "dnsNameLabel": "[concat(parameters('containerGroups_scientific_api_full_name'), '-1748121289')]",
                    "autoGeneratedDomainNameLabelScope": "Unsecure"
                },
                "osType": "Linux"
            }
        }
    ],
    "outputs": {
        "containerIPv4Address": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerGroups_scientific_api_full_name'))).ipAddress.ip]"
        },
        "containerFQDN": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerGroups_scientific_api_full_name'))).ipAddress.fqdn]"
        }
    }
} 