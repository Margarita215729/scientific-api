# Environment Configuration Template for Scientific API
# Copy this file to .env and fill in the actual values

# ============================================================================
# MongoDB Configuration
# ============================================================================
# MongoDB connection URI
# Format: mongodb://[username:password@]host[:port][/database]
# Example: mongodb://localhost:27017
# Example with auth: mongodb://admin:password@localhost:27017
MONGO_URI=mongodb://localhost:27017

# MongoDB database name
MONGO_DB_NAME=scientific_api

# ============================================================================
# Redis Configuration
# ============================================================================
# Redis connection URL for caching and Celery backend
# Format: redis://[username:password@]host[:port][/db]
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Logging Configuration
# ============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Data Storage
# ============================================================================
# Root directory for all data storage (raw, processed, models)
# This should be an absolute path or relative to project root
DATA_ROOT=/workspaces/scientific-api/data

# ============================================================================
# Application Settings
# ============================================================================
# Application name
APP_NAME=Scientific API

# Application version
APP_VERSION=0.1.0

# Debug mode (true/false)
DEBUG=false

# API route prefix for version 1
API_V1_PREFIX=/api/v1

# CORS allowed origins (comma-separated list or * for all)
CORS_ORIGINS=*

# ============================================================================
# Machine Learning Configuration
# ============================================================================
# Random seed for reproducibility in ML experiments
ML_RANDOM_SEED=42

# Number of parallel jobs for ML tasks (-1 for all available cores)
ML_N_JOBS=-1

# ============================================================================
# Celery Configuration (Optional)
# ============================================================================
# Celery broker URL (if not set, REDIS_URL will be used)
# CELERY_BROKER_URL=redis://localhost:6379/1

# Celery result backend URL (if not set, REDIS_URL will be used)
# CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# External Data Sources (for future use)
# ============================================================================
# SDSS Data Release credentials and endpoints (if needed)
# SDSS_USERNAME=
# SDSS_PASSWORD=

# DESI Data Release access credentials (if needed)
# DESI_USERNAME=
# DESI_PASSWORD=

# ============================================================================
# Development & Testing
# ============================================================================
# Set to true for local development
# DEV_MODE=true
